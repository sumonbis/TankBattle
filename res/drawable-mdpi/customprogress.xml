<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
  <item android:id="@android:id/background">
    <shape>
      <corners android:radius="0dip" />
      <gradient
        android:angle="270"
        android:centerColor="#F2070A"
        android:centerY="0.5"
        android:endColor="#F2070A"
        android:startColor="#F2070A" />
    </shape>
  </item>
  <item android:id="@android:id/progress">
    <clip>
      <shape>
        <corners android:radius="0dip" />
          <gradient
            android:angle="270"
            android:endColor="#0E8C03"
            android:centerColor="#0C8201"
            android:startColor="#0E8C03" />
      </shape>
    </clip>
  </item>
</layer-list>