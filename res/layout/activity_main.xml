<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/green"
    
    tools:context="com.iit.tankbattle.Splash" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/accueil_modern" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="START"
        android:layout_marginBottom="30dp"
        android:textSize="34dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#052E01"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:text="TANK BATTLE"
        android:textStyle="bold"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/scoreNumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="2dp"
        android:layout_alignBaseline="@+id/scoreTextView"
        android:layout_alignBottom="@+id/scoreTextView"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginRight="21dp"
        android:text="TextView"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="24dp"
        android:text="BEST SCORE:"
        android:textSize="18dp" />

</RelativeLayout>
 